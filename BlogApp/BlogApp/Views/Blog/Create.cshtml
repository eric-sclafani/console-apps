@model BlogApp.Models.BlogPost
@{
	ViewBag.Title = "Create New Post";
	Layout = "_Layout";
}

<div class="d-flex flex-column gap-4 w-50" style="margin-left:20px">

	<h2>New Blog Post</h2>
	<form asp-action="Create" class="d-flex flex-column gap-4">
		<div class="form-floating">
			<input
				asp-for="Title"
				class="form-control"
				id="title" type="text"
				placeholder="Amazing title..."/>
			<label for="title">Amazing title...</label>
		</div>

		<div class="form-floating">
			<textarea 
				asp-for="Content" 
				class="form-control" 
				id="content"
				style="height:30vh"
				type="text" 
				placeholder="Superb content...">
			</textarea>
			<label for="content">Superb content...</label>
		</div>

		<button type="submit" class="btn btn-outline-success w-25">Submit</button>
	</form>
</div>